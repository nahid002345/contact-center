    <link href="~/Content/CustomeTheme/global/uniform.default.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CustomeTheme/global/bootstrap-switch.min.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/Site.css" rel="stylesheet" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="~/Content/CustomeTheme/pages/login.css" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL SCRIPTS -->
    <!-- BEGIN THEME STYLES -->
    <link href="~/Content/CustomeTheme/pages/components.css" id="style_components" rel="stylesheet" type="text/css" />
    <link href="~/Content/CustomeTheme/pages/plugins.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CustomeTheme/pages/layout.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CustomeTheme/pages/darkblue.css" rel="stylesheet" type="text/css" id="style_color" />
    <link href="~/Content/CustomeTheme/pages/custom.css" rel="stylesheet" type="text/css" />
    <!-- END THEME STYLES -->
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" />
</head>

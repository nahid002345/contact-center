<!-- BEGIN BODY -->
<body class="login">
    <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
    <div class="menu-toggler sidebar-toggler">
    </div>
    <!-- END SIDEBAR TOGGLER BUTTON -->
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="@Url.Action("Index","SignIn")">
            <img src="~/Content/img/logo/contact-center-logo.png" style="width: 10%;" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        @Html.AntiForgeryToken()
        @using (Html.BeginForm("SignIn", "SignIn", FormMethod.Post, new { @class = "login-form" }))
        {

            <h3 class="form-title">Log In</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span>
                    Enter any User ID/Employee ID and password.
                </span>
            </div>
            <div class="form-group">

                <label class="control-label visible-ie8 visible-ie9">User ID/Employee ID</label>
                @Html.TextBoxFor(m => m.USERID, new { @class = "form-control form-control-solid placeholder-no-fix", autocomplete = "off", placeholder = "User ID/EmployeeID", name = "EmployeeID" })

                @Html.ValidationMessageFor(m => m.USERID, null, new { @class = "alert alert-danger display" })

            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                @Html.PasswordFor(m => m.USERPASSWORD, new { @class = "form-control form-control-solid placeholder-no-fix", placeholder = "Password", name = "Password" })
                @Html.ValidationMessageFor(m => m.USERPASSWORD, null, new { @class = "alert alert-danger display" })

                @*<input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" />*@
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn green uppercase">Login <span class="fa fa-unlock"></span></button>
            </div>
            if (TempData["SignMsg"] != null)
            {
                
                <div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                    <strong>Warning!</strong> @TempData["SignMsg"].ToString()
                </div>
            }
        }

        <!-- END LOGIN FORM -->
    </div>
    <div class="copyright">
        2015 © OBL Contact Center
    </div>
    <!-- END LOGIN -->
    <!-- BEGIN JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
    <!-- BEGIN CORE PLUGINS -->
    <!--[if lt IE 9]>
    <script src="../../assets/global/plugins/respond.min.js"></script>

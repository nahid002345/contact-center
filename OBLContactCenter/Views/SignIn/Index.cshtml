    <script src="~/Scripts/CustomeJS/layout.js" type="text/javascript"></script>
    <script src="~/Scripts/CustomeJS/quick-sidebar.js" type="text/javascript"></script>
    <script src="~/Scripts/CustomeJS/demo.js" type="text/javascript"></script>

    <!-- END PAGE LEVEL SCRIPTS -->

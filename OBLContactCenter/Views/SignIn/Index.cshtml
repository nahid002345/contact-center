    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/CustomeJS/bootstrap-hover-dropdown.min.js" type="text/javascript"></script>
    <script src="~/Scripts/CustomeJS/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="~/Scripts/CustomeJS/jquery.blockui.min.js" type="text/javascript"></script>
    <script src="~/Scripts/CustomeJS/jquery.cokie.min.js" type="text/javascript"></script>

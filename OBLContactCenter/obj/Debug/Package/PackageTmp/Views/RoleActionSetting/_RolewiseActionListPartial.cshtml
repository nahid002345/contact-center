@model List<OBLContactCenter.Models.RoleAction>

<div class="portlet box blue-ebonyclay">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-grid"></i>Role wise Action
             List
        </div>
    </div>

    <div class="portlet-body flip-scroll">
        @if (Model != null)
        {
            using (Html.BeginForm("SaveRoleActionList", "RoleActionSetting", FormMethod.Post, new { id = "frmRoleMenu", @class = "form-horizental" }))
            {
                var grid = new WebGrid(Model, rowsPerPage: 10, canPage: false, canSort: false);
                
            @grid.GetHtml(
                         tableStyle: "table table-bordered table-striped table-condensed flip-content",
                         headerStyle: "flip-content",

                         columns: new[]{
                             grid.Column(
                        header: "",
                        format:@<text>
            @if (item.IsAssigned == null)
                            {
<input name="chkSelect" type="checkbox" value="@item.ActionID" />
                            }
                            else
                            {
<input name="chkSelect" type="checkbox" value="@item.ActionID" checked="checked" />
                            }

            </text>
                    ),

                           grid.Column("ActionName",header: "NAME"),
                           grid.Column(format:@<input type="hidden" name="MemoTypeID" id="MemoTypeID" value="@item.MemoTypeID" />),
                           //grid.Column(null,null,format:@<input type="hidden" name="ID" id="ID" value="@item.ID" />),
            grid.Column(format:@<input type="hidden" name="RoleId" id="RoleId" value="@item.RoleId" />)
                            },
                                               mode: WebGridPagerModes.All
                                               );
               


            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-6 col-md-9">

                        <button type="submit" class="btn green" name="btnName" value="update" id="btnSaveRoleMenu">Save</button>

                    </div>
                </div>
            </div>
            }
        }
        else
        {
            <div class="note note-warning">
                <h4 class="block"><span class="fa fa-warning"></span>No result found </h4>
            </div>
        }
    </div>
</div>

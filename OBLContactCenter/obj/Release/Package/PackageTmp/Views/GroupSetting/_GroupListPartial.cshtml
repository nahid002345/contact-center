@model List<OBLContactCenter.EFnClass.CCGROUP>

<div class="portlet box blue-ebonyclay">

    <div class="portlet-body flip-scroll">
        @if (Model != null)
        {
            var grid = new WebGrid(Model, rowsPerPage: 10, canPage: true, canSort: false, ajaxUpdateContainerId: "");
            grid.PagerList(WebGridPagerModes.All, paginationStyle: "Pagination");


            @grid.GetHtml(
             tableStyle: "table table-bordered table-striped table-condensed flip-content",
             headerStyle: "flip-content",

             columns: new[]{
               grid.Column(header: "Group Name",format:@<text><a class="editGroup" data-id="@item.ID" data-url="@Url.Action("EditGroup", "GroupSetting")">@item.GROUPNAME</a></text>),
               //grid.Column("GROUPNAME",header: "Group Name"),
               grid.Column("EMAIL",header: "Email"),
               grid.Column("ISACTIVE", "Status",format: (item) => (item.ISACTIVE) ? Html.Raw("<span class='fa fa-check-square-o'></span>") :
                                                                                        Html.Raw("<span class='fa fa-times'></span>"))


                @*grid.Column("", "Action", format: @<button class="btn red editGroup" data-id="@item.ID" data-url="@Url.Action("EditGroup", "GroupSetting")">Edit <i class="fa fa-edit"></i></button>)*@

                },
                          mode: WebGridPagerModes.All
                          );
        }
        else
        {
            <div class="note note-warning">
                <h4 class="block"><span class="fa fa-warning"></span>No result found </h4>
            </div>
        }
    </div>
</div>





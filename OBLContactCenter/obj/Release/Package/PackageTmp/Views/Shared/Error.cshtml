@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<hgroup class="title">
    <h1 class="error">Error.</h1>
    <h2 class="error">An error occurred while processing your request.</h2>
    <h2 class="error">@Model.ActionName</h2>
    <h2 class="error">@Model.ControllerName</h2>
    <h2 class="error">@if (Model.Exception.InnerException != null) { Model.Exception.InnerException.ToString(); } else { Model.Exception.ToString(); }</h2>
</hgroup>
